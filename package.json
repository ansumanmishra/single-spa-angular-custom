{
  "name": "single-spa-angular-custom",
  "version": "1.0.5",
  "description": "This is a custom schematics built on top of single-spa-angular schematics which fixes running the application in standalone mode",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "test": "npm run build && jasmine src/**/*_spec.js"
  },
  "keywords": [
    "schematics",
    "single spa",
    "single spa angular",
    "angular"
  ],
  "author": "Ansuman Mishra <sunmoonfortune@gmail.com>",
  "homepage": "https://github.com/ansumanmishra/single-spa-angular-custom",
  "license": "MIT",
  "schematics": "./src/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^14.2.10",
    "@angular-devkit/schematics": "^14.2.10",
    "typescript": "~4.8.4"
  },
  "devDependencies": {
    "@types/jasmine": "~4.3.0",
    "@types/node": "^15.12.1",
    "jasmine": "^4.0.0"
  }
}
